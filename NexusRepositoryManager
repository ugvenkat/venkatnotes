#https://www.howtoforge.com/how-to-install-nexus-repository-manager-on-ubuntu-22-04/
sudo apt update && sudo apt ugrade -y
sudo apt install openjdk-8-jdk
java -version
sudo useradd -d /opt/nexus -s /bin/bash nexus
sudo passwd nexus
ulimit -n 65536
sudo echo "nexus - nofile 65536' >> /etc/security/limits.d/nexus.conf
ulimit -a
cd ~/home/Downloads
wget https://download.sonatype.com/nexus/3/nexus-3.41.1-01-unix.tar.gztar 
xzf nexus-3.41.1-01-unix.tar.gz
sudo mv nexus-3.41.1-01 /opt/nexus
sudo mv sonatype-work /opt/
sudo chown -R nexus:nexus /opt/nexus /opt/sonatype-work
sudo echo 'run_as_user="nexus"' >> /opt/nexus/bin/nexus.rc

sudo nano /etc/nexus/bin/nexus.vmoptions
-Xms1024m
-Xmx1024m
-XX:MaxDirectMemorySize=1024m

sudo nano /opt/sonatype-work/nexus3/etc/nexus.properties
application-host=127.0.0.1



sudo touch /etc/systemd/system/nexus.service
echo "[Unit]"
echo "Description=nexus service"
echo "After=network.target"

echo "[Service]"
echo "Type=forking"
echo "LimitNOFILE=65536"
echo "ExecStart=/opt/nexus/bin/nexus start"
echo "ExecStop=/opt/nexus/bin/nexus stop"
echo "User=nexus"
echo "Restart=on-abort"


echo "[Install]"
echo "WantedBy=multi-user.target"



sudo systemctl daemon-reload
sudo systemctl start nexus.service
sudo systemctl enable nexus.service
sudo systemctl status nexus.service

sudo apt install nginx -y
sudo systemctl is-enabled nginx
sudo systemctl status nginx

sudo touch /etc/nginx/sites-available/nexus

echo "upstream nexus3 {"
echo "  server 127.0.0.1:8081;"
echo "}"

echo "server {"
echo "  listen 80;"
echo "  server_name nexus.hwdomain.io;"

echo "  location / {"

echo "      proxy_pass http://nexus3/;"
echo "             proxy_http_version 1.1;""
echo "              proxy_set_header Upgrade $http_upgrade;
echo "              proxy_set_header Connection "upgrade";"
echo "              proxy_set_header Host $http_host;"

echo "              proxy_set_header X-Real-IP $remote_addr;"
echo "              proxy_set_header X-Forward-For $proxy_add_x_forwarded_for;"
echo "              proxy_set_header X-Forward-Proto http;"
echo "              proxy_set_header X-Nginx-Proxy true;"

echo "              proxy_redirect off;"
echo "          }"
echo "      }"


sudo ln -s /etc/nginx/sites-available/nexus /etc/nginx/sites-enabled/
sudo nginx -t
sudo systemctl restart nginx

http://nexus.hwdomain.io

use admin as userid and password as below.
cat /opt/sonatype-work/nexus3/admin.properties


